{
    "manifest_version": 3,
    "name": "See Password",
    "version": "1.0",
    "description": "See password on hover",
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup.html"
    }
}